{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@agent-market/sdk": ["../../packages/sdk/src"],

      // These three lines fix the Vercel build error
      "@/components/*": ["../../packages/ui/components/*"],
      "@/lib/*": ["../../packages/ui/lib/*"],
      "@/hooks/*": ["../../packages/ui/hooks/*"]
      // Add more lines here if you have other folders inside packages/ui
      // e.g. "@/utils/*": ["../../packages/ui/utils/*"]
    },
    "types": ["@types/node"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "Bundler",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "src/**/*.tsx",
    "next.config.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
