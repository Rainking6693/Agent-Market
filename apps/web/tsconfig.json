{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@agent-market/sdk": ["../../packages/sdk/src"],

      // This is the correct one for your project (shadcn style)
      "@/components/*": ["../../packages/shadcn/components/*"],
      "@/lib/*": ["../../packages/shadcn/lib/*"],
      "@/hooks/*": ["../../packages/shadcn/hooks/*"]
    },
    "types": ["@types/node"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "Bundler",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "src/**/*.tsx",
    "next.config.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
